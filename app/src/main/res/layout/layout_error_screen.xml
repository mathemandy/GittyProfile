<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/error_icon"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerInParent="true"
        android:alpha="0.87"
        android:src="@drawable/cloud_error"/>

    <TextView
        android:id="@+id/error_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/error_icon"
        android:layout_centerHorizontal="true"
        android:alpha="0.87"
        android:text="@string/error_in_connection"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/error_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/error_message"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:alpha="0.87"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/try_again"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/error_desc"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:text="@string/try_again_error_message"
        android:textColor="@color/colorPrimaryDark"/>

</RelativeLayout>